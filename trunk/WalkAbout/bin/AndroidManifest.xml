<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.metcs683.walkabout"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.metcs683.walkabout.WaypointList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.metcs683.walkabout.WaypointDetail"
            android:label="@string/title_activity_waypoint_detail" >
        </activity>
        <activity
            android:name="edu.metcs683.walkabout.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="edu.metcs683.walkabout.WaypointMap"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_waypoint_map"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="edu.metcs683.walkabout.MovePhotosBetweenWaypoints"
            android:label="@string/title_activity_move_photos_between_waypoints" >
        </activity>
        <activity
            android:name="edu.metcs683.walkabout.PhotoViewer"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_photo_viewer"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="edu.metcs683.walkabout.PhotoDetail"
            android:label="@string/title_activity_photo_detail" >
        </activity>
    </application>

</manifest>